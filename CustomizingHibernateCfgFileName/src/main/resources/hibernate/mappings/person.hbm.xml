<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.adarsh.entity.Person" table="Person">
        <id name="personId" column="PersonId">
            <generator class="assigned"/>
        </id>
        <property name="firstName" column="PersonFirstName"/>
        <property name="middleName" column="PersonMiddleName"/>
        <property name="lastName" column="PersonLastName"/>
        <property name="dateOfBirth" column="PersonDob" type="org.hibernate.type.DateType"/>
    </class>
</hibernate-mapping>
   